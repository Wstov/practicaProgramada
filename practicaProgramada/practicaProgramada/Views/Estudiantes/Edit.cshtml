@model PracticaProgramada.BLL.Dtos.EstudianteDto

<h2>Editar Estudiante</h2>

<form method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label>Nombre</label>
        <input class="form-control" asp-for="Nombre" />
    </div>

    <div class="form-group">
        <label>Apellido</label>
        <input class="form-control" asp-for="Apellido" />
    </div>

    <div class="form-group">
        <label>Carné</label>
        <input class="form-control" asp-for="Carne" />
    </div>

    <div class="form-group">
        <label>Email</label>
        <input class="form-control" asp-for="Email" />
    </div>

    <div class="form-group">
        <label>Teléfono</label>
        <input class="form-control" asp-for="Telefono" />
    </div>

    <button class="btn btn-primary" type="submit">Actualizar</button>
</form>
